//interrupciones del boton y su estructura
portMUX_TYPE mux = portMUX_INITIALIZER_UNLOCKED;

struct Button {
  const uint8_t PIN;
  bool pressed;
  bool laststate;
};

Button boton = {15, false, false};

void IRAM_ATTR BOTON_ISR(){
  portENTER_CRITICAL_ISR(&mux);
  boton.pressed = true;
  portEXIT_CRITICAL_ISR(&mux);
}
